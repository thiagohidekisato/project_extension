<div class="container" >
  <%= form_for(@project) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      *Nome:
        <%= f.text_area :name, placeholder: "Nome do projeto", class: 'form-control' %><br>
      *Data de início: (formato 01/01/2001)
        <%= f.text_area :date_start, placeholder: "Data de início do projeto", class: 'form-control' %><br>
      Data de fim: (formato 01/01/2001)
        <%= f.text_area :date_finish, placeholder: "Data de início do projeto", class: 'form-control' %><br>
      *Aceita fomento empresarial?:
        <%= f.check_box :fomento, class: 'checkbox' %> <label for="fomento">Sim</label> <br>
      *Local:
        <%= f.text_area :local, placeholder: "Local de realização do projeto", class: 'form-control' %><br>
      <%#Imagem:
        <%= f.text_area :images, placeholder: "Imagem", class: 'form-control' <br>%>
      *Descrição:
        <%= f.text_area :description, placeholder: "Adicionar descrição", class: 'form-control' %><br>
      *Número de participantes:
        <%= f.number_field :n_participants, class: 'form-control' %><br>
      *Vagas para voluntários:
        <%= f.number_field :v_volunteers, class: 'form-control' %><br>
      *Vagas para bolsistas
        <%= f.number_field :v_bolsistas, class: 'form-control' %><br>
      *Perfil dos voluntários:
        <%= f.text_area :perfil_volunteers, placeholder: "Perfil dos voluntários", class: 'form-control' %><br>
      Imagem:
      <span class="picture">
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
      </span><br>
    </div>
    <%= f.submit "Cadastrar projeto", class: "btn btn-project" %><br>
  <% end %>
  <script type="text/javascript">
    $('#project_picture').bind('change', function() {
      var size_in_megabytes = this.files[0].size/1024/1024;
      if (size_in_megabytes > 5) {
        alert('Maximum file size is 5MB. Please choose a smaller file.');
      }
    });
  </script>
</div>
