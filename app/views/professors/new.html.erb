<% provide(:title, 'Cadastro') %>
<!-- Page Content -->
<div class="container">

<!-- Page Heading/Breadcrumbs -->
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cadastro
            <small>Professores</small>
        </h1>
        <ol class="breadcrumb">
            <li> <%= link_to "Home", root_path %> </li>
            <li class="active">Cadastro de professores</li>
        </ol>
    </div>
</div>
<!-- /.row -->
<p class =  "bg-succces"><strong>* campos obrigatórios</strong></p>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <!-- <form class="form-horizontal" role="form"> -->
        <%= form_for(@professor, url: signup_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <label for="nomeCompleto" class="col-md-3 control-label">Nome completo*:</label>
                <div class="col-md-9">
                    <!--<input type="text" id="nomeCompleto" placeholder="Ex: Maria das Dores" class="form-control" autofocus required> -->
                    <%= f.text_field :name,  placeholder: "Ex: Maria das Dores", autofocus: true, required: true, class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-md-3 control-label">E-mail*</label>
                <div class="col-md-9">
                    <!--<input type="email" id="email" placeholder="Ex: maria@mail.com" class="form-control" required> -->
                    <%= f.email_field :email, placeholder: "Ex: maria@mail.com", required: true, class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-md-3 control-label">Senha* (mínimo 6 dígitos)</label>
                <div class="col-md-9">
                    <!--<input type="password" id="password" placeholder="Senha" class="form-control" required> -->
                    <%= f.password_field :password, placeholder: "Senha", required: true, class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
                <label for="password2" class="col-md-3 control-label">Confirme sua senha*</label>
                <div class="col-md-9">
                    <!--<input type="password" id="password2" placeholder="Senha" class="form-control" required>-->
                    <%= f.password_field :password_confirmation, placeholder: "Senha", required: true, class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
                <label for="telefone" class="col-md-3 control-label">Telefone*</label>
                <div class="col-md-6">
                    <!--<input type="text" id="telefone" placeholder="Ex: 12 3900-0000" class="form-control" required> -->
                    <%= f.phone_field :phone, placeholder: "Ex: (12) 3900-0000", required: true, class: 'form-control' %><br>
                </div>
                <label for="ramal" class="col-md-1 control-label">Ramal*</label>
                <div class="col-md-2">
                    <!--<input type="text" id="ramal" placeholder="Ramal" class="form-control">-->
                    <%= f.phone_field :ramal, placeholder: "Ramal", required: true, class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
                <label for="celular" class="col-md-3 control-label">Telefone celular</label>
                <div class="col-md-9">
                    <!--<input type="text" id="celular" placeholder="Ex: (12)99000-0000" class="form-control">-->
                    <%= f.phone_field :phone_cel, placeholder:"Ex: (12) 99000-0000", class: 'form-control' %><br>
                </div>
            </div>


            <div class="form-group">
                <label for="area" class="col-md-3 control-label">Área de especialização*</label>
                <div class="col-md-9">
                    <!--<input type="text" id="area" placeholder="Ex: Cálculo numérico" class="form-control" required>-->
                    <%= f.text_field :specialization, placeholder:"Ex: Cálculo numérico", required: true, class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
                <label for="sala" class="col-md-3 control-label">Sala*</label>
                <div class="col-md-9">
                    <!--<input type="text" id="sala" placeholder="Ex: 302" class="form-control" required>-->
                    <%= f.text_field :room, placeholder:"Ex: 302", required: true, class: 'form-control' %><br>
                </div>
            </div>
            
            <div class="form-group">
                <label for="lattes" class="col-md-3 control-label">Link para currículo Lattes*</label>
                <div class="col-md-9">
                    <!--<input type="text" id="lattes" placeholder="Ex: http://lattes.gov.br/seulattes" class="form-control" required>-->
                    <%= f.text_field :lattes, placeholder:"Ex: http://lattes.gov.br/seulattes", class: 'form-control' %><br>
                </div>
            </div>
            <div class="form-group">
              <div class="col-md-9 col-md-offset-3">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" required>Aceito os <a href="#">termos de uso</a><br>
                    </label>
                </div>
            </div>
            </div> <!-- /.form-group -->
              <div class="form-group">
                  <div class="col-md-9 col-md-offset-3">
                      <!-- <button type="submit" class="btn btn-primary btn-block">Cadastrar</button> -->
                      <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %><br>
                  </div>
              </div>
        </div>
</div>    
    
<% end %>

</div></div>
