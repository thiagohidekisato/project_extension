<% provide(:title, @professor.name) %>
<div class="container">
  <div class="row">
      <div class="col-lg-12">
        <%= render_breadcrumbs builder: ::Bootstrap4BreadcrumbsBuilder %>
      </div>
  </div>
</div>
<div class="container" >
      <section class="user_info">
        <h1>
          <%= gravatar_for @professor %>
          <%= @professor.name %>
        </h1>
      </section>
      E-mail: <%= @professor.email %> <br>
      Telefone: <%= @professor.phone %> Ramal: <%= @professor.ramal %> <br>
      Especialização: <%= @professor.specialization %>
      <br><br>
      <% if @professor.projects.any? %>

        <h3>Projetos (<%= @professor.projects.count %>)</h3>
        <ol class="projects">
          <%= render @projects %>
        </ol>
        <%= will_paginate @projects %>
      <% end %>
</div>
