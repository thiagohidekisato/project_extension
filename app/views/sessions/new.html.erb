<% provide(:title, "Login") %>

<div class="container" >
	<div class="row" >
  	<div class="col-md-6 col-md-offset-3"><h1>Login</h1>
    	<%= form_for(:session, url: login_path) do |f| %>

 	     E-mail: <%= f.email_field :email, class: 'form-control' %>
 	     <br>
	      Senha: <%= f.password_field :password, class: 'form-control' %>
	      <br>
  	    <%= f.submit "Login", class: "btn btn-primary" %>	
 	   <% end %>
 	   <br>
  	  <p>Novo professor? <%= link_to "Cadastre-se!", signup_path %></p>
	  </div>
	</div>
</div></div>
