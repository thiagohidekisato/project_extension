<% provide(:title, "Editar") %>
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= render_breadcrumbs builder: ::Bootstrap4BreadcrumbsBuilder %>
    </div>
  </div>
  <h1>Alteração de dados do projeto</h1>
      <%= form_for(@project) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name, "Nome" %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.label :data_start, "Data de Início" %>
        <%= f.text_area :date_start, class: 'form-control' %>
        <br>
        <%= f.label :data_finish , "Data de Término"%>
        <%= f.text_area :date_finish, class: 'form-control' %>
        <br>
        <%= f.label :fomento , "Aceita Fomento? "%>
        <%= f.check_box :fomento, class: 'checkbox' %><label for="fomento">Sim</label>
        <br>
        <br>
        <%= f.label :local , "Local"%>
        <%= f.text_area :local, class: 'form-control' %>
        <br>
        <%= f.label :description, "Descrição" %>
        <%= f.text_area :description, class: 'form-control' %>
        <br>
        <%= f.label :n_participants , "Número de Participantes"%>
        <%= f.number_field :n_participants, class: 'form-control' %>
        <br>
        <%= f.label :v_volunteers , "Número de Voluntários"%>
        <%= f.number_field :v_volunteers, class: 'form-control' %>
        <br>
        <%= f.label :v_bolsistas, "Número de Bolsistas" %>
        <%= f.number_field :v_bolsistas, class: 'form-control' %>
        <br>
        <%= f.label :perfil_volunteers , "Perfil dos Voluntários"%>
        <%= f.text_area :perfil_volunteers, class: 'form-control' %>
        <br>
        <%= f.label :picture , "Imagem"%>
        <span class="picture">
          <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
        </span>
        <br>
          <br>
        <%= f.submit "Salvar Alterações", class: "btn btn-project" %><br>
      <% end %>
      <br>
</div>
